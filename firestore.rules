rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      // Any authenticated user can read any user profile
      allow read: if request.auth != null;
      // User can write their own profile, no restrictions
      allow write: if request.auth != null && request.auth.uid == userId;
      // Vinyls subcollection
      match /vinyls/{vinylId} {
        // Any authenticated user can read (for guest browsing)
        allow read: if request.auth != null;
        // Owner can write their own vinyls
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      // Snapshots subcollection (backups)
      match /snapshots/{snapshotId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    // Catch-all: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
